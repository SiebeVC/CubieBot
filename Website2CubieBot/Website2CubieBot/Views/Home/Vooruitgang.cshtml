@model List<Taal>
@using Website2CubieBot.Models
@{
    if (Model.Count > 0)
    {
        ViewBag.Title = Model[0].Titel;
    }
}

@if (Model.Count > 0)
{
    <h2 class="m-3 text-center">@Model[0].Titel</h2>
}

@foreach (var item in Model)
{
    if (!string.IsNullOrWhiteSpace(item.Inhoud))
    {
        <div class="text">
            <div class="row">
                <div class="col mar-l text-right pr-5 text-dark font-weight-bold">
                    <h1 style="color:gray">@item.Titel</h1>
                    <p>
                        @item.Inhoud
                    </p>
                </div>
            </div>
        </div>
    }
}
