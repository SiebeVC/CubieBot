</head>
<body>

    <!-- Nav -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light" style="border-bottom:1.5px solid rgb(33, 94, 110); z-index: 33;">
            <a class="navbar-brand" href="@Url.Action("Language", "Home")">
                <img src="~/Content/Images/Logo.png" style="height:30px; width:auto;" alt="Logo">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <div class="navbar-nav">

                        <ul style="display: inline-block;">
                            <li style="display: inline-block; padding-right: 30px;"><a class="nav-item nav-link">@Html.ActionLink("Home", "Home", "nl")</a></li>
                            <li style="display: inline-block; padding-right: 30px;"><a class="nav-item nav-link">@Html.ActionLink("Over Ons", "Contact", "nl")</a></li>

                            @if (User.Identity.IsAuthenticated)
                            {
                                if (User.IsInRole("Admin") || User.IsInRole("Jury"))
                                {
                                    <li style="display: inline-block; padding-right: 30px;"><a class="nav-item nav-link">@Html.ActionLink("Logboek", "Index", "LogboekElements")</a></li>
                                    <div style="width:7px"></div>
                                    <li style="display: inline-block; padding-right: 0px;"><a class="nav-item nav-link">@Html.ActionLink("Deadlines", "Index", "Deadlines")</a></li>

                                }
                            }

                            <li style="display: inline-block; margin-left: -18px"><a class="nav-item nav-link">@Html.Partial("_LoginPartial")</a></li>

                            
                        </ul>


                        
                        

                    </div>
                </div>
            </div>
        </nav>




